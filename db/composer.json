{
    "name": "swoft/db",
    "type": "library",
    "keywords": [
        "php",
        "swoole",
        "swoft",
        "db",
        "orm"
    ],
    "description": "microservice framework base on swoole",
    "license": "Apache-2.0",
    "require": {
        "swoft/framework": "^1.0",
        "swoft/console": "^1.0",
        "swoft/service-governance": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Swoft\\Db\\": "src/"
        },
        "files": [
            "src/Helper/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Swoft\\Db\\Test\\": "test"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    ],
    "require-dev": {
        "eaglewu/swoole-ide-helper": "dev-master",
        "phpunit/phpunit": "^5.7"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml"
    }
}
